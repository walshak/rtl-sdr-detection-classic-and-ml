# RTL-SDR Detection System - Docker Environment Variables

# Flask Configuration
FLASK_APP=api.py
FLASK_ENV=production
FLASK_DEBUG=0

# RTL-SDR Device Configuration
# Device index: 0 or 1 (depends on which USB port/device)
# The system will auto-detect if the specified index fails
RTL_SDR_DEVICE=0
SAMPLE_RATE=2048000
CENTER_FREQ=100000000

# Device Identification
DEVICE_LABEL=DEVICE_1
DEVICE_LAT=0.0
DEVICE_LONG=0.0

# Database Paths
DB_PATH=/app/data/detections.db
ML_DB_PATH=/app/data/ml_detections.db

# Scan Configuration
SCAN_INTERVAL=10
THRESHOLD_DB=10

# ML Configuration (optional)
ML_ENABLED=false
ML_MODEL_PATH=/app/models/

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
